<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.sebas.todo.ui.MainViewController">
    
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <TextField fx:id="txtTask"
                promptText="Escribe una tarea"
                HBox.hgrow="ALWAYS"
                onAction="#handleAddTask"/>
            <Button fx:id="btnNew"
                text="Agregar"
                onAction="#handleAddTask"/>
            <Button fx:id="btnDeleteAll"
                text="Eliminar todo"
                onAction="#handleDeleteAllTasks"
            />   
        </HBox>
    </top>
    
    <center>
        <ListView fx:id="taskList"/>
    </center>

</BorderPane>